{
  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": ["git-button.js"]
    }
  ],
  "name": "Git branch name generator for Pivotal Tracker",
  "description": "Add a copy button to pivotal stories to generate a branch name based on id and slugified name.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": [
    "https://pivotaltracker.com/*",
    "https://www.pivotaltracker.com/*"
  ],
  "version": "1.0.0",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": ["logo.svg"],
      "matches": [
        "https://www.pivotaltracker.com/*",
        "https://pivotaltracker.com/*"
      ]
    }
  ]
}
